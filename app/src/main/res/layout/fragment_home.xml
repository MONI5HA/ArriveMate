<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->

            <!-- Title -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEB3B"

                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/baseline_add_location_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/akshar_medium"
                    android:text="canada"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/akshar_medium"
                    android:text="Welcome To"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akshar_medium"
                    android:text="CANADA"
                    android:textColor="#C54646"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_white"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_content_paste_search_24" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/akshar_medium"
                        android:hint="Search"
                        android:paddingStart="8dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Student Banner -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red_500"
                android:fontFamily="@font/akshar_medium"
                android:padding="12dp"
                android:text="Are you a Student?\nLets Get You Ready"
                android:textColor="#FFFFFF" />

            <!-- Icon Buttons -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="16dp"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Repeat for each icon card -->
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"

                    android:background="@drawable/bg_card_yellow"
                    android:backgroundTint="#FFEB3B"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/translate_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/akshar_medium"
                        android:text="Translator" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"

                    android:background="@drawable/bg_card_yellow"
                    android:backgroundTint="#FFEB3B"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/contact_emergency_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/akshar_medium"
                        android:text="Contact Information" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"

                    android:background="@drawable/bg_card_yellow"
                    android:backgroundTint="#FFEB3B"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/info_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/akshar_medium"
                        android:text="About" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="129dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"

                    android:background="@drawable/bg_card_yellow"
                    android:backgroundTint="#FFEB3B"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/news_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/akshar_medium"
                        android:text="News" />

                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="34dp"
                android:background="@drawable/bg_rounded_white"
                android:padding="16dp"
                android:layout_margin="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/akshar_medium"
                    android:text="Currency"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Labels Row -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="To"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/akshar_medium"
                        android:gravity="start"
                        android:text="From"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/akshar_medium"
                        android:text="To" />

                </LinearLayout>

                <!-- Currency Boxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <!-- From Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FFEB00"
                        android:paddingHorizontal="12dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:contentDescription="USA Flag" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/akshar_medium"
                            android:text="$ 56"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!-- To Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FFEB00"
                        android:paddingHorizontal="12dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:contentDescription="USA Flag" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/akshar_medium"
                            android:text="$ 79"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <!-- Flight Tracker -->
            <LinearLayout
                android:id="@+id/flightTrackerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="34dp"
                android:padding="16dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/flightTrackerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/akshar_medium"
                    android:text="Flight Tracker"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Input Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Flight Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/outline_flight_takeoff_24"
                        android:contentDescription="Flight Icon"
                        android:layout_marginEnd="8dp"
                        app:tint="#000000" />

                    <!-- EditText -->
                    <EditText
                        android:id="@+id/flightNumberInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Enter Flight Number"
                        android:textColorHint="#BDBDBD"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:inputType="text"
                        android:background="@null"
                        android:padding="0dp"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>

                <!-- Line Under EditText -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- Search Button -->
                <Button
                    android:id="@+id/searchFlightButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_card_yellow"
                    android:backgroundTint="#FFEB00"
                    android:fontFamily="@font/akshar_medium"
                    android:text="Search"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
            <!-- Top Institution / Places -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/akshar_medium"
        android:text="Top Institution"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerInstitutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:clipToPadding="false"
                android:layout_marginTop="16dp" />
</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <!-- Top Institution / Places -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/akshar_medium"
                    android:text="Top Places"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerplaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>